<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/home_prop_detail_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#406e56"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/home_property_price_text2"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="$00"
                android:textColor="@color/colorWhite" />

            <TextView
                android:id="@+id/home_property_sel_type_text2"
                style="@style/Base.TextAppearance.AppCompat.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:singleLine="true"
                android:text="@string/for_rent"
                android:textColor="@color/colorWhite" />

            <TextView
                android:id="@+id/home_property_address_text2"
                style="@style/Base.TextAppearance.AppCompat.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:singleLine="true"
                android:text="Indore, Madhya Pradesh, India"
                android:textColor="@color/colorWhite" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/home_property_bads_text2"
                    style="@style/Base.TextAppearance.AppCompat.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_0_beds"
                    android:textColor="@color/colorWhite" />

                <TextView
                    android:id="@+id/home_property_baths_text2"
                    style="@style/Base.TextAppearance.AppCompat.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="@string/_0_baths"
                    android:textColor="@color/colorWhite" />

                <TextView
                    android:id="@+id/home_property_acres_text2"
                    style="@style/Base.TextAppearance.AppCompat.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="@string/_0_acres"
                    android:textColor="@color/colorWhite" />

                <TextView
                    android:id="@+id/home_property_sqft_text2"
                    style="@style/Base.TextAppearance.AppCompat.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="@string/_0_m2"
                    android:textColor="@color/colorWhite" />


            </LinearLayout>


            <Button
                android:id="@+id/more_info_btn"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="@string/more_info"
                android:textAllCaps="false"
                android:textColor="@color/colorAccent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:visibility="visible">

            <Button
                android:id="@+id/dummy_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />


            <ImageView
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:layout_height="match_parent"
                android:id="@+id/home_property_imageview2"
                android:layout_width="match_parent"
                android:src="@drawable/dummy_img" />


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/transparent" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"
                android:visibility="gone">

                <TextView

                    style="@style/Base.TextAppearance.AppCompat.Large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="$00K"
                    android:textColor="@color/colorWhite" />


                <Button

                    style="@style/Base.TextAppearance.AppCompat.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@color/colorAccent"
                    android:text="@string/for_sale"
                    android:textColor="@color/colorWhite" />


            </RelativeLayout>
        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>