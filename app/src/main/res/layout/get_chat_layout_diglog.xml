<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/get_chat_reciver_detail_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:visibility="visible">

        <RelativeLayout
            android:id="@+id/receiver_relative_lay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/chattt">

            <TextView
                android:id="@+id/reciver_text_message_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/hi_how_are_you" />
        </RelativeLayout>


        <android.support.v7.widget.CardView
            android:id="@+id/get_chat_reciver_cardview"
            android:layout_width="160dp"
            android:layout_height="140dp"
            android:layout_marginTop="10dp"
            android:textAllCaps="false"
            android:visibility="gone"
            app:cardCornerRadius="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/receiver_imageview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/prop" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <ImageView
            android:id="@+id/receiver_location_imageview"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:adjustViewBounds="true"
            android:src="@drawable/location_chat"
            android:visibility="gone" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/get_chat_sender_detail_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/get_chat_reciver_detail_layout"
        android:layout_marginRight="5dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:visibility="visible">

        <RelativeLayout
            android:id="@+id/sender_relative_lay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@drawable/chatt">

            <TextView
                android:id="@+id/sender_text_message_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Hi,  How are you"
                android:textAllCaps="false"
                android:textColor="#fff" />
        </RelativeLayout>


        <android.support.v7.widget.CardView
            android:id="@+id/get_chat_sender_cardview"
            android:layout_width="160dp"
            android:layout_height="140dp"
            android:layout_below="@+id/sender_only_text_layout"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:textAllCaps="false"
            android:visibility="gone"
            app:cardCornerRadius="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/sender_imageview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/prop" />


            </LinearLayout>

        </android.support.v7.widget.CardView>

        <ImageView
            android:id="@+id/sender_location_imageview"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:adjustViewBounds="true"
            android:src="@drawable/location_chat"
            android:visibility="gone" />
    </LinearLayout>
</RelativeLayout>