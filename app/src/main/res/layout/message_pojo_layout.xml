<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/get_conversation_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/get_conversation_profile_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/user"
            android:layout_gravity="center_vertical"/>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginLeft="10dp"
           android:orientation="vertical">


           <TextView
               android:visibility="gone"
               android:id="@+id/message_time_text"
               android:textColor="@color/colorBlack"
               style="@style/TextAppearance.AppCompat.Small"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/_1_hour_ago"
               android:gravity="right"
               android:layout_gravity="right"/>

           <TextView
               android:id="@+id/message_text_username"
               android:textColor="@color/colorBlack"
               style="@style/TextAppearance.AppCompat.Medium"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/dummy_name"
               />

           <TextView
               android:id="@+id/message_text_message"
               android:textColor="@color/colorBlack"
               style="@style/TextAppearance.AppCompat.Small"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="hjhfhdjf"
              />

           <ImageView
               android:id="@+id/delete_chat_image"
               android:layout_width="23dp"
               android:layout_height="23dp"
               android:layout_gravity="bottom|right"
               android:src="@drawable/delete"/>

       </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>